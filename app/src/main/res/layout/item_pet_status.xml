<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="#111111">

    <!-- Ícone circular -->
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#A9D8D6"
            android:padding="14dp"
            android:src="@drawable/statusicon"
            android:scaleType="centerInside"
            android:background="@drawable/circle_background"
            app:tint="#FFFFFF" />
    </FrameLayout>

    <!-- Textos -->
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medication"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:fontFamily="@font/mulish_extrabold" />

        <TextView
            android:id="@+id/statusVet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Stone"
            android:textColor="#B5B3B3"
            android:textSize="10sp"
            android:fontFamily="@font/mulish_regular" />

        <TextView
            android:id="@+id/statusTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Vaccinated (2h Ago)"
            android:textColor="#5CB15A"
            android:textSize="8sp"
            android:fontFamily="@font/fredoka_semibold" />
    </LinearLayout>

    <!-- Botão More -->
    <LinearLayout
        android:id="@+id/moreButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:backgroundTint="#A9D8D6"
        android:background="@drawable/more_button_background"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/fredoka_regular"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/setaoutro"
            app:tint="#FFFFFF" />
    </LinearLayout>
</LinearLayout>